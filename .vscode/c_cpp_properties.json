{
    "configurations": [
        {
            "name": "Linux",
            "compilerPath": "/usr/bin/mpicxx",
            "cStandard": "c11",
            "cppStandard": "c++20",
            "intelliSenseMode": "linux-gcc-x64",
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/include",
                "${workspaceFolder}/src",
                "${workspaceFolder}/test",
                "/usr/include",
                "/usr/local/include"
            ],
            "compilerArgs": ["-fopenmp", "-std=gnu++20"],
            "defines": [
                "_GNU_SOURCE",
                "_OPENMP"
            ],
            "browse": {
                "path": [
                    "${workspaceFolder}/include",
                    "${workspaceFolder}/src",
                    "/usr/include",
                    "/usr/local/include",
                    "/usr/include/openmpi"
                ],
                "limitSymbolsToIncludedHeaders": true
            }
        }
    ],
    "version": 4
}
